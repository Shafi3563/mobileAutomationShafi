<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="iOS test suite on iPhone Simulator">

    <parameter name="OS" value="ios"/>
    <parameter name="appType" value="iPhone"/>
    <parameter name="deviceType" value="Simulator"/>
    <parameter name="deviceName" value="iPhone Simulator"/>
    <parameter name="version" value="10.3"/>

    <test name="Go to Home page" preserve-order="true">
        <classes>
            <class name="testHome.HomePageTest"/>
            <class name="testHome.BreakingNewsTest"/>
            <class name="testHome.BusinessTest"/>
            <class name="testHome.EntertainmentPageTest"/>
            <class name="testHome.FashionTest"/>
            <class name="testHome.MediaTest"/>
            <class name="testHome.MenuTest"/>
            <class name="testHome.OpinionTest"/>
            <class name="testHome.SportsEventTest"/>
        </classes>
    </test>
</suite>
