<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="iOS test suite on iPhone Simulator">

    <parameter name="OS" value="ios"/>
    <parameter name="appType" value="iPhone"/>
    <parameter name="deviceType" value="Simulator"/>
    <parameter name="deviceName" value="iPhone Simulator"/>
    <parameter name="version" value="12.1"/>

    <test name="Go to Home page" preserve-order="true">
        <classes>
            <class name="iPad.HomePage"/>
            <class name="iPhone.ButtonTest"/>
            <class name="iPhone.TextFieldsTest"/>
            <class name="iPhone.PickerTest"/>
            <class name="iPhone.AlertsTest"/>
            <class name="iPhone.ControlsPageTest"/>
            <class name="iPhone.ImagesPageTest"/>
            <class name="iPhone.SegmentsPageTest"/>
            <class name="iPhone.ToolBarPageTest"/>
            <class name="iPhone.UICatalogPageTest"/>
            <class name="iPhone.WebPageTest"/>
        </classes>
    </test>
</suite>
